<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.ZakatFragment"
    android:background="@color/colorListBackground">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Zakat Calculator"
                android:gravity="center"
                android:textSize="25dp"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/ark" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Gold Value"
                    android:gravity="center"
                    android:textSize="17dp"
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="@font/ark" />
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:inputType="number"
                    android:background="@android:color/transparent"
                    android:textColorHint="@color/colorPrimary"
                    android:hint="00.00"
                    android:textColor="@color/colorPrimary"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimary"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Sliver Value"
                    android:gravity="center"
                    android:textSize="17dp"
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="@font/ark" />
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:layout_alignParentRight="true"
                    android:background="@android:color/transparent"
                    android:textColorHint="@color/colorPrimary"
                    android:hint="00.00"
                    android:textColor="@color/colorPrimary"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimary"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cash On Hand"
                    android:gravity="center"
                    android:textSize="17dp"
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="@font/ark" />
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:inputType="number"
                    android:background="@android:color/transparent"
                    android:textColorHint="@color/colorPrimary"
                    android:hint="00.00"
                    android:textColor="@color/colorPrimary"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimary"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Checking Account"
                    android:gravity="center"
                    android:textSize="17dp"
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="@font/ark" />
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:inputType="number"
                    android:background="@android:color/transparent"
                    android:textColorHint="@color/colorPrimary"
                    android:hint="00.00"
                    android:textColor="@color/colorPrimary"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimary"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Saving Account"
                    android:gravity="center"
                    android:textSize="17dp"
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="@font/ark" />
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@android:color/transparent"
                    android:textColorHint="@color/colorPrimary"
                    android:inputType="number"
                    android:hint="00.00"
                    android:textColor="@color/colorPrimary"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimary"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Business Bank Account"
                    android:gravity="center"
                    android:textSize="17dp"
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="@font/ark" />
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@android:color/transparent"
                    android:textColorHint="@color/colorPrimary"
                    android:inputType="number"
                    android:hint="00.00"
                    android:textColor="@color/colorPrimary"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimary"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/stock"
                    android:gravity="center"
                    android:textSize="17dp"
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="@font/ark" />
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:layout_alignParentRight="true"
                    android:background="@android:color/transparent"
                    android:textColorHint="@color/colorPrimary"
                    android:hint="00.00"
                    android:textColor="@color/colorPrimary"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimary"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Real Estate"
                    android:gravity="center"
                    android:textSize="17dp"
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="@font/ark" />
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:inputType="number"
                    android:background="@android:color/transparent"
                    android:textColorHint="@color/colorPrimary"
                    android:hint="00.00"
                    android:textColor="@color/colorPrimary"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimary"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Account Receivable"
                    android:gravity="center"
                    android:textSize="17dp"
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="@font/ark" />
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@android:color/transparent"
                    android:textColorHint="@color/colorPrimary"
                    android:inputType="number"
                    android:hint="00.00"
                    android:textColor="@color/colorPrimary"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimary"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Payable Zakat"
                    android:gravity="center"
                    android:textSize="17dp"
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="@font/ark" />
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@android:color/transparent"
                    android:textColorHint="@color/colorPrimary"
                    android:inputType="none"
                    android:editable="false"
                    android:hint="00.00"
                    android:textColor="@color/colorPrimary"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimary"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="calculate"
                    android:paddingLeft="40dp"
                    android:paddingRight="40dp"
                    android:textColor="@android:color/white"
                    android:background="@drawable/button_back"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>