<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorListBackground"
    tools:context=".Fragments.RamzanFragment"
    android:orientation="vertical">
    <include layout="@layout/ramzan_header_view"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ramzan Time Table"
        android:fontFamily="@font/ark"
        android:textColor="@color/colorPrimary"
        android:textSize="22dp"
        android:padding="10dp"
        android:gravity="center" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="40"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvRamzanDate"
            android:text="May"
            android:fontFamily="@font/ark"
            android:textSize="18dp"
            android:gravity="center"
            android:layout_weight="10"
            android:textColor="@color/colorPrimary"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvRamzanHDate"
            android:text="Ramzan"
            android:fontFamily="@font/ark"
            android:gravity="center"
            android:textSize="18dp"
            android:layout_weight="10"
            android:textColor="@color/colorPrimary"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvRamzanSehri"
            android:gravity="center"
            android:text="Sehri"
            android:fontFamily="@font/ark"
            android:layout_weight="10"
            android:textSize="18dp"
            android:textColor="@color/colorPrimary"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvRamzanAftari"
            android:text="Aftari"
            android:gravity="center"
            android:fontFamily="@font/ark"
            android:textSize="18dp"
            android:layout_weight="10"
            android:textColor="@color/colorPrimary"/>

    </LinearLayout>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ramzanList"
        android:dividerHeight="0dp"
        android:divider="@android:color/transparent">
    </ListView>
</LinearLayout>